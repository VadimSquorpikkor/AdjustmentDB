<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Стиль для EditText на фрагменте QR-сканера-->
    <style name="for_data_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_orange</item>
    </style>

    <style name="nice_button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="colorControlHighlight">#424242</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_shape_selector</item>
    </style>
</resources>