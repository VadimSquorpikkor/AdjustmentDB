<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55555555" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#33333333"
                android:centerX="0.9"
                android:endColor="#11111111"
                android:startColor="#33333333" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#33333333"
                android:centerX="0.9"
                android:endColor="#11111111"
                android:startColor="#33333333" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#33333333"
                android:centerY="0.2"
                android:endColor="#11111111"
                android:startColor="#33333333" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>